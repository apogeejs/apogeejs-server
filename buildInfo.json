{
    "repoName": "apogeejs-server",

    "npmModule": {
        "taskList": [
            {
                "type": "copyAndReplace",
                "srcFileUrl": "/apogeejs-server/package.json",
                "replacementList": [
                    {
                        "marker": "[RELEASE_VERSION]",
                        "libVersion": "this"
                    },
                    {
                        "marker": "[APOGEE_UTIL_VERSION]",
                        "libVersion": "apogeejs-util-lib"
                    },
                    {
                        "marker": "[APOGEE_BASE_VERSION]",
                        "libVersion": "apogeejs-base-lib"
                    },
                    {
                        "marker": "[APOGEE_MODEL_VERSION]",
                        "libVersion": "apogeejs-model-lib"
                    }
                ]
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-server/deploy/**/*"
                ],
                "childFolder": "deploy"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-server/file/**/*"
                ],
                "childFolder": "file"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-server/extras/**/*"
                ],
                "childFolder": "extras"
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-model-lib/src/debugHook.js",
                    "/apogeejs-model-lib/src/nodeGlobals.js",
                    "/apogeejs-server/src/**/*"
                ],
                "childFolder": "src"
            }
        ]
    }
}